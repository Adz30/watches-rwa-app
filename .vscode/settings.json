{
  // Default formatter
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // Auto-format on save
  "editor.formatOnSave": true,

  // File associations
  "files.associations": {
    "*.js": "javascriptreact",
    "*.jsx": "javascriptreact",
    "*.ts": "typescript",
    "*.tsx": "typescriptreact",
    "*.json": "json",
    "*.md": "markdown",
    "*.sol": "solidity"
  },

  // Prettier as default for JS/TS/JSON/Markdown
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Solidity formatting (uses your installed Solidity extension)
  "[solidity]": {
    "editor.defaultFormatter": "JuanBlanco.solidity" // replace with your Solidity extension's publisher ID if different
  }
}
